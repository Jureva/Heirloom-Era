<div class="row">
  <div class="box">
   <div class="col-lg-12">
<p id="notice"><%= notice %></p>

<h2 class="intro-text text-center">All Customers</h2>
<%= will_paginate %>
<table>
  <style>
  th, td {
    padding: 11px;
}
</style>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= gravatar_for customer, size: 50 %>
          <%= link_to customer.name, customer %>
        </td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
              <td><%= link_to 'Delete', customer,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
</div>
</div>
</div>

