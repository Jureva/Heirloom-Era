<div class="container">
<div class="row">
<div class="box">
<div class="col-lg-12">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Email address:</strong>
  <%= @customer.email %>
</p>
  <aside class="col-md-4">
    <section class="customer_info">
<h2>
  <%= gravatar_for @customer %>
  <%= @customer.name %>
</h2>
    </section>
  </aside>
  
 
 <div class="col-md-8">
    <% if @customer.feedbacks.any? %>
      <h3>feedbacks (<%= @customer.feedbacks.count %>)</h3>
      <ol class="feedbacks">
        <%= render @feedbacks %>
      </ol>
     
    <% end %>
  </div>
 
<% if current_customer?(@customer) %>  
<%= link_to 'Edit', edit_customer_path(@customer) %> |
<% end %>
<%= link_to 'Back', customers_path %>
</div>
</div>
</div>
</div>