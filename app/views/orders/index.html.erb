<div class="container">
<div class="row">
  <div class="box">
   <div class="col-lg-12">  
    <h2 class="intro-text text-center">Your Orders</h2>
 
<table>
     <style>
  th, td {
    padding: 11px;
  }
     </style>
  <tr>
    <th>Title</th>
    <th>Price</th>
  </tr>
 
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.title %></td>
      <td><%= order.price %></td>
      <td><%= link_to 'Show', order_path(order) %></td>
      <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Delete', order,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Buy', order_path(order), method: :post %></td>
    </tr>
  <% end %>
</table>
