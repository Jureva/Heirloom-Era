<div class="container">
<div class="row">
  <div class="box">
   <div class="col-lg-12">  
    <h2 class="intro-text text-center">Customer Orders</h2>
 
<table>
     <style>
  th, td {
    padding: 11px;
  }
     </style>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.title %></td>
      <td><%= order.description %></td>
      <td><%= number_to_currency order.price %></td>
    
      <% if c_care? %> 
      <td><%= link_to 'Edit', edit_order_path(order) %></td>
      <% end %>
      <% if has_price(order.price) %>
      <td><%= link_to 'Make a payment', order_path(order), method: :post %></td>
      <% else %>
      <td><strong>Quoting in progress</strong></td>
      <% end %>
      <td><%= link_to 'Delete', order,
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
    <h2 class="intro-text text-center"> Pay with PayPal </h2>
    <img class="img-responsive img-border img-right" src="<%= asset_path 'payments.jpg'%>" alt="">  <!--strong>%= link_to 'New order', new_order_path %></strong-->  
    </div>
  </div>
</div>

