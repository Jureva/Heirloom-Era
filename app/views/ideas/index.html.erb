
<div class="row">
  <div class="box">
   <div class="col-lg-12">  
    <h2 class="intro-text text-center">Viewing ideas</h2>
     <table>
     <style>
  th, td {
    padding: 11px;
  }
     </style>
      <tr>
        <th>Title</th> 
        <th>Text</th> 
        <th colspan="3"></th> 
      </tr>
     
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.title %></td>
          <td><%= idea.text %></td>
          <td><%= link_to 'Show', idea_path(idea) %></td>
          <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
          <td><%= link_to 'Delete', idea,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
     </table>
     <strong><%= link_to 'New idea', new_idea_path %></strong>  
  </div>
 </div>
</div>



