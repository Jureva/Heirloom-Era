<h2>Welcome to Heirloom Era!</h2>
<%= link_to 'Heirloom Ideas', controller: 'ideas' %>
<%= form_for :idea, url: ideas_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

