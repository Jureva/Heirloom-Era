<div class="box">
   <div class="col-lg-12">  
    <h2 class="intro-text text-center">Emails for Customer Care</h2>
     <table>
     <style>
  th, td {
    padding: 11px;
  }
     </style>
      <tr>
        <th>Name</th> 
        <th>Email</th>
        <th>Subject</th>
        <th>Message</th>
        <th colspan="3"></th> 
      </tr>
     
      <% @customer_cares.each do |customer_care| %>
        <tr>
          <td><%= customer_care.name %></td>
          <td><%= customer_care.mail %></td>
          <td><%= customer_care.subject %></td>
          <td><%= customer_care.message %></td>
          <td><%= link_to "Delete", customer_care, method: :delete %></td>
        </tr>
      <% end %>
     </table>
  </div>
 </div>